import tkinter as tk

# Create main window
window = tk.Tk()
window.title("Calculator")

# Function to handle button click (dummy function for demonstration)
def button_click(number):
    print(f"Button {number} clicked")  # Replace or extend this with actual functionality

# Buttons for numbers 0 to 9
buttons = {}
for number in range(1, 10):
    # Calculate grid positions
    row, col = divmod(number-1, 3)
    buttons[number] = tk.Button(window, text=str(number), command=lambda n=number: button_click(n))
    buttons[number].grid(row=row, column=col, sticky="nsew", padx=5, pady=5)

# Button 0 placement (last row, middle column)
buttons[0] = tk.Button(window, text="0", command=lambda: button_click(0))
buttons[0].grid(row=3, column=1, sticky="nsew", padx=5, pady=5)

# Configure grid to expand buttons equally
for i in range(3):
    window.grid_columnconfigure(i, weight=1)
    window.grid_rowconfigure(i, weight=1)

window.mainloop()
